@using System.ComponentModel.DataAnnotations
@using CapaEntidades;
@model Alumno
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<div class="form-horizontal">

    @using (Html.BeginForm())
    {

        <div class="form-group">
            <div class="col-md-2">
                @Html.LabelFor(m => m.nombre)
            </div>
            <div class="col-md-10">
                @Html.EditorFor(m => m.nombre, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                @Html.LabelFor(m => m.primerApellido)
            </div>
            <div class="col-md-10">
                @Html.EditorFor(m => m.primerApellido, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                @Html.LabelFor(m => m.segundoApellido)
            </div>
            <div class="col-md-10">
                @Html.EditorFor(m => m.segundoApellido, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                @Html.LabelFor(m => m.fechaNacimiento)
            </div>
            <div class="col-md-10">
                @Html.EditorFor(m => m.fechaNacimiento, new { htmlAttributes = new { @class = "form-control", @type="Date" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                @Html.LabelFor(m => m.curp)
            </div>
            <div class="col-md-10">
                @Html.EditorFor(m => m.curp, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                @Html.LabelFor(m => m.correo)
            </div>
            <div class="col-md-10">
                @Html.EditorFor(m => m.correo, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                @Html.LabelFor(m => m.telefono)
            </div>
            <div class="col-md-10">
                @Html.EditorFor(m => m.telefono, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                @Html.LabelFor(m => m.sueldo)
            </div>
            <div class="col-md-10">
                @Html.EditorFor(m => m.sueldo, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                @Html.LabelFor(m => m.estado)
            </div>
            <div class="col-md-10">
                @Html.DropDownList("estado", new SelectList(ViewBag.estados, "id", "nombre"), new { htmlAttributes = new { @class = "form-control", @type = "Select" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                @Html.LabelFor(m => m.estatus)
            </div>
            <div class="col-md-10">
                @Html.DropDownList("estatus", new SelectList(ViewBag.estatus, "id", "nombre"), new { htmlAttributes = new { @class = "form-control", @type = "Select" } })
            </div>
        </div>

        <!-- Botón de enviar -->
        <button type="submit" class="btn btn-primary">Guardar</button>

    }
<div class="form-group">
    <div class="col-md-offset-2 col-md-4">
        <a>@Html.ActionLink("Regresar a la lista", "Index", "AlumnosC", null)</a>
    </div>
</div>

</div>
